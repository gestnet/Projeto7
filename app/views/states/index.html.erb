<section id="cta">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title text-center wow fadeInDown">Lista de Estados</h2>
      <div class="text-center">
        <p id="notice"><%= notice %></p>
      </div>
    </div>
  </div>
</section>

<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 wow fadeInLeft">
        <h3 class="column-title">Listagem</h3>

        <table class="table">
          <thead>
            <tr>
              <th cla>Name</th>
              <th>Url</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @states.each do |state| %>
            <tr>
              <td><%= state.name %></td>
              <td><%= state.url %></td>
              <td><%= link_to 'Visualizar', state, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Editar', edit_state_path(state), class: 'btn btn-success btn-xs' %></td>
              <td><%= link_to 'Apagar', state, method: :delete, data: { confirm: 'Quer mesmo apagar o registo?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td><a class="btn btn-primary" href="/states/new">Criar Estado</a></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</section>




